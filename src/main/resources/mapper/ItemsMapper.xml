<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="taller1.grupo.vueadmin.system.mapper.ItemsMapper">
    
    <!-- Mapeo de resultados -->
    <resultMap id="itemsResult" type="taller1.grupo.vueadmin.system.entity.dto.ItemsDto">
        <result column="codi" property="codi" jdbcType="INTEGER"/>
        <result column="nombre" property="nombre" jdbcType="VARCHAR"/>
        <result column="estado" property="estado" jdbcType="INTEGER"/>
    </resultMap>

    <!-- Consulta paginada con filtro -->
    <select id="queryItemsTable" resultMap="itemsResult">
        SELECT 
            codi,
            nombre,
            estado
        FROM academico.items
        <where>
            <if test="blurry != null and blurry != ''">
                AND nombre ILIKE CONCAT('%', #{blurry}, '%')
            </if>
        </where>
        ORDER BY codi ASC
    </select>

</mapper>